{{!
    @template mod_peerforum/peerforum_post_email_textemail

    Template which defines a peerforum post for sending in a single-post text email.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * coursename
    * peerforumname
    * showdiscussionname
    * discussionname
    * permalink
    * subject
    * authorfullname
    * postdate
    * message
    * attachments
    * canreply
    * replyhidden
    * canseereply
    * replylink
    * unsubscribepeerforumlink
    * unsubscribediscussionlink
    * peerforumindexlink
    * isprivatereply
}}
{{{ coursename }}} -> {{# str }} peerforums, peerforum {{/ str }} -> {{{ peerforumname }}}{{# showdiscussionname }} -> {{{ discussionname }}} {{/ showdiscussionname }}
{{ permalink }}
{{{ subject }}}
{{# str }} bynameondate, peerforum, {
"name": {{# quote }}{{{ authorfullname }}}{{/ quote }},
"date": {{# quote}}{{ postdate }}{{/ quote }}
} {{/ str }}
{{# isprivatereply }}
    {{# str }} postisprivatereply, peerforum {{/ str }}
{{/ isprivatereply }}
---------------------------------------------------------------------
{{# canseereply }}
    {{{ message }}}
    {{# replyhidden }}
        (This reply is hidden for the students until peer grade is over.)
    {{/ replyhidden }}
{{/ canseereply }}
{{^ canseereply }}
    (Sorry, you can only see this reply after the parent peer grade is over.)
{{/ canseereply }}

{{{ attachments }}}
---------------------------------------------------------------------
{{# canreply }}
    {{# str }} postmailinfolink, peerforum, {
    "coursename": {{# quote }}{{{ coursename }}}{{/ quote }},
    "replylink": {{# quote }}{{ replylink }}{{/ quote }}
    } {{/ str }}
{{/ canreply }}
{{# unsubscribepeerforumlink }}
    {{# str }} unsubscribelink, peerforum, {{{ unsubscribepeerforumlink }}} {{/ str }}
{{/ unsubscribepeerforumlink }}
{{# unsubscribediscussionlink }}
    {{# str }} unsubscribediscussionlink, peerforum, {{{ unsubscribediscussionlink }}} {{/ str }}
{{/ unsubscribediscussionlink }}
{{# str }} digestmailpostlink, peerforum, {{{ peerforumindexlink }}} {{/ str }}
